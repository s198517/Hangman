<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simenarvnes.hangman" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.simenarvnes.s198517.GameActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.simenarvnes.s198517.RulesActivity"
            android:parentActivityName="com.example.simenarvnes.s198517.GameActivity"></activity>

        <activity android:name="com.example.simenarvnes.s198517.LanguageActivity"
            android:parentActivityName="com.example.simenarvnes.s198517.GameActivity"></activity>

        <activity android:name="com.example.simenarvnes.s198517.Exit"
            android:parentActivityName="com.example.simenarvnes.s198517.GameActivity"></activity>

    </application>

</manifest>
